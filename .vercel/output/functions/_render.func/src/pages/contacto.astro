---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Icon from '../components/Icon.astro';

const contactMethods = [
  {
    icon: 'mdi:whatsapp',
    title: 'WhatsApp',
    text: 'La forma más rápida de hablar con nosotros. Haz clic aquí para enviarnos un mensaje.',
    href: 'https://wa.me/56966306409',
    cta: 'Enviar Mensaje'
  },
  {
    icon: 'mdi:instagram',
    title: 'Instagram',
    text: 'Síguenos para ver nuestros últimos diseños, novedades y promociones especiales.',
    href: 'https://www.instagram.com/TUPERFILDEINSTAGRAM',
    cta: 'Seguir en Instagram'
  },
  {
    icon: 'mdi:email-outline',
    title: 'Correo Electrónico',
    text: 'Para consultas más detalladas o colaboraciones, puedes escribirnos un email.',
    href: 'mailto:tuemail@example.com',
    cta: 'Escribir Correo'
  }
];
---

<Layout title="Contacto">
  <Header />
  <main class="contact-page">
    <div class="container">
      <div class="page-header">
        <h1>Ponte en Contacto</h1>
        <p class="subtitle">¿Tienes alguna pregunta o quieres hacer un pedido especial? ¡Estamos aquí para ayudarte!</p>
      </div>

      <div class="contact-grid">
        {contactMethods.map(method => (
          <div class="contact-card">
            <div class="icon-wrapper">
              <Icon name={method.icon} size={40} />
            </div>
            <h3>{method.title}</h3>
            <p>{method.text}</p>
            <a href={method.href} class="contact-button" target="_blank" rel="noopener noreferrer">
              {method.cta}
            </a>
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
.contact-page {
  padding: 4rem 0;
  background-color: var(--color-background-alt, #f9fafb);
}
.container {
  max-width: 900px; /* Un poco más estrecho para centrar el contenido */
  margin: 0 auto;
  padding: 0 1.5rem;
}
.page-header {
  text-align: center;
  margin-bottom: 3rem;
}
.page-header h1 {
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 0.5rem;
}
.page-header .subtitle {
  font-size: 1.1rem;
  color: var(--color-text-light, #555);
  max-width: 600px;
  margin: 0 auto;
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.contact-card {
  background-color: white;
  padding: 2rem;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 4px 15px rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
}

.icon-wrapper {
  color: #c23b63; /* Color rosado de la marca */
  margin-bottom: 1rem;
}

.contact-card h3 {
  font-size: 1.25rem;
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 0.75rem;
}

.contact-card p {
  color: var(--color-text-light, #555);
  line-height: 1.6;
  margin-top: 0;
  flex-grow: 1; /* Empuja el botón hacia abajo */
}

.contact-button {
  display: inline-block;
  background-color: var(--color-primary, #fc9700);
  color: var(--color-text-dark, #333);
  padding: 0.75rem 1.5rem;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 700;
  transition: all 0.2s ease;
}

.contact-button:hover {
  background-color: var(--color-primary-dark, #fc9700);
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}
</style>
