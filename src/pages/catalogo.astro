---
import Layout from '../layouts/Layout.astro';

// Definimos las categorías disponibles
const categories = [
  {
    name: 'Niños',
    href: '/catalogo/ninos',
    description: 'Carnets de control personalizados con diseños divertidos y alegres.'
  },
  {
    name: 'Niñas',
    href: '/catalogo/ninas',
    description: 'Diseños encantadores, coloridos y únicos para acompañar su crecimiento.'
  },
  {
    name: 'Mascotas',
    href: '/catalogo/veterinarios',
    description: 'Lleva el registro de vacunas y visitas del mejor amigo de la familia.'
  },
];
---

<Layout title="Catálogo - Molly Inc.">
  <main class="catalog-page">
    <section class="catalog-header">
      <div class="container">
        <h1>Catálogo de Diseños</h1>
        <p class="subtitle">
          Explora nuestras categorías y encuentra el carnet perfecto para tus seres más importantes.
        </p>
      </div>
    </section>

    <section class="catalog-grid-section">
      <div class="container">
        <div class="category-grid">
          {categories.map(cat => (
            <a href={cat.href} class="category-card">
              <div class="card-content">
                <h2>{cat.name}</h2>
                <p>{cat.description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
.catalog-page {
  background: linear-gradient(180deg, #fdfdfd 0%, #f7f7f7 100%);
  padding: 4rem 0 6rem;
  min-height: 100vh;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1.5rem;
}
@media (min-width: 1536px) {
  .container { max-width: 1440px; }
}

.catalog-header {
  text-align: center;
  margin-bottom: 3rem;
}
.catalog-header h1 {
  font-size: 2.75rem;
  font-weight: 800;
  color: #222;
  margin-bottom: 0.75rem;
}
.catalog-header .subtitle {
  font-size: 1.15rem;
  color: #666;
  max-width: 650px;
  margin: 0 auto;
  line-height: 1.6;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2.5rem;
}

.category-card {
  background: #fff;
  border-radius: 18px;
  padding: 2.5rem 1.8rem;
  text-align: center;
  text-decoration: none;
  color: #333;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}
.category-card::before {
  content: "";
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(120deg, #ffecd2, #fcb69f);
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: 0;
}
.category-card:hover::before {
  opacity: 0.25;
}
.category-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 35px rgba(0, 0, 0, 0.08);
}
.card-content {
  position: relative;
  z-index: 1;
}
.category-card h2 {
  font-size: 1.9rem;
  margin-bottom: 0.7rem;
  font-weight: 700;
}
.category-card p {
  font-size: 1rem;
  color: #555;
  line-height: 1.5;
}

/* Ajuste responsive */
@media (max-width: 768px) {
  .catalog-header h1 { font-size: 2.2rem; }
  .category-card { padding: 2rem 1.5rem; }
}
</style>
