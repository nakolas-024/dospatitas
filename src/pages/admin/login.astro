// src/pages/admin/login.astro (REDIRECCIÓN CORREGIDA)
import Layout from "../../layouts/Layout.astro";
export const prerender = false;

let error = "";

if (Astro.request.method === "POST") {
  const contentType = Astro.request.headers.get("content-type") || "";
  let user = "";
  let pass = "";

  if (contentType.includes("application/x-www-form-urlencoded")) {
    const body = await Astro.request.text();
    const params = new URLSearchParams(body);
    user = params.get("user") || "";
    pass = params.get("pass") || "";
  }

  // --- Validación ---
  if (user === "dospatitas" && pass === "dospatitas2025") {
    // Éxito: Redirigir y establecer cookie
    return new Response(null, {
      status: 302,
      headers: {
        // --- CORRECCIÓN AQUÍ ---
        Location: "/admin/dashboard", // Apunta a dashboard.astro
        // ---------------------
        "Set-Cookie": `auth=true; Path=/; HttpOnly; SameSite=Lax; Max-Age=86400`, // Cookie válida por 1 día
      },
    });
  } else {
    // Falla: Mostrar mensaje de error
    error = "Usuario o contraseña incorrectos";
  }
}
---

<Layout title="Iniciar sesión | Dospatitas">
  <style>
    /* Estilos sin cambios */
    main { min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #fff7f5 0%, #ffe4dc 100%); font-family: "Poppins", sans-serif; }
    form { background: white; padding: 2.5rem 3rem; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center; width: 100%; max-width: 400px; }
    h1 { margin-bottom: 1.5rem; color: #f06d4f; font-size: 1.8rem; font-weight: 700; }
    label { display: block; text-align: left; margin-top: 1rem; margin-bottom: 0.4rem; color: #444; font-weight: 600; }
    input { width: 100%; padding: 0.8rem 1rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem; transition: border 0.3s; box-sizing: border-box; }
    input:focus { outline: none; border-color: #f06d4f; }
    button { margin-top: 1.5rem; width: 100%; background: #f06d4f; color: white; border: none; padding: 0.8rem; font-size: 1rem; border-radius: 10px; cursor: pointer; transition: background 0.3s; font-weight: 600; }
    button:hover { background: #d85f45; }
    p.error { color: #c62828; font-size: 0.9rem; margin-top: 0.8rem; background: #ffeaea; padding: 0.6rem; border-radius: 8px; }
    .logo { width: 180px; margin: 0 auto 1.5rem auto; display: block; }
  </style>

  <main>
    <form method="POST" enctype="application/x-www-form-urlencoded">
      <img src="/images/dospatitas-logo.png" alt="Dospatitas" class="logo" />
      <h1>Acceso Administrativo</h1>

      <label for="user">Usuario</label>
      <input type="text" id="user" name="user" placeholder="Ej: dospatitas" required />

      <label for="pass">Contraseña</label>
      <input type="password" id="pass" name="pass" placeholder="••••••••••" required />

      <button type="submit">Ingresar</button>

      {error && <p class="error">{error}</p>}
    </form>
  </main>
</Layout>