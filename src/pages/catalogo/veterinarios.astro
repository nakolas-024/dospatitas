---
import ProductCardFull from "@/components/ProductCardFull.astro";
import supabase from "@/lib/supabaseClient";

const { data: products, error } = await supabase
  .from("productos")
  .select("*")
  .eq("categoria", "veterinarios");

if (error) {
  console.error("Error cargando productos:", error.message);
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Veterinarios | Molly Inc</title>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <section class="max-w-6xl mx-auto px-4 py-10">
      <h1 class="text-3xl font-bold text-center mb-10">Veterinarios</h1>

      {error ? (
        <p class="text-center text-red-500">
          Error al cargar productos: {error.message}
        </p>
      ) : products && products.length > 0 ? (
        <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
          {products.map((product) => (
            <ProductCardFull product={product} />
          ))}
        </div>
      ) : (
        <p class="text-center text-gray-500">No hay productos disponibles.</p>
      )}
    </section>
  </body>
</html>

<style>
  body {
    font-family: system-ui, sans-serif;
  }

  h1 {
    color: #222;
  }

  .grid {
    display: grid;
  }
</style>
