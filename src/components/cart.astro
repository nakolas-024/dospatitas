// src/components/Cart.astro (Versión con estética final - Revisado y Correcto)
---
<div id="cart-panel" class="cart-panel" aria-hidden="true">
  <div class="panel-header">
    <h3>Tu Pedido</h3>
    <button id="close-cart-btn" class="close-btn" aria-label="Cerrar carrito">×</button>
  </div>
  <div id="cart-items-container" class="cart-items-container"></div>
  <div class="panel-footer">
    <a id="whatsapp-checkout-btn" href="#" class="whatsapp-btn disabled" target="_blank" rel="noopener noreferrer">
      Hacer Pedido por WhatsApp
    </a>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const cartPanel = document.getElementById('cart-panel');
  const closeCartBtn = document.getElementById('close-cart-btn');
  const WHATSAPP_NUMBER = '56958473816';

  const updateCartContent = () => {
    const cart = JSON.parse(localStorage.getItem('cart')) || [];
    const itemsContainer = document.getElementById('cart-items-container');
    const checkoutBtn = document.getElementById('whatsapp-checkout-btn');

    if (cart.length === 0) {
      itemsContainer.innerHTML = '<p class="empty-cart-message">Tu carrito está vacío.</p>';
      checkoutBtn.classList.add('disabled');
      return;
    }

    itemsContainer.innerHTML = cart.map(item => `
      <div class="cart-item" data-id="${item.id}">
        <div class="item-details">
          <p class="item-name">${item.name}</p>
          <div class="item-quantity">
            <button class="quantity-btn" data-action="decrease">-</button>
            <span>${item.quantity}</span>
            <button class="quantity-btn" data-action="increase">+</button>
          </div>
        </div>
        <button class="remove-item-btn" aria-label="Eliminar item">×</button>
      </div>
    `).join('');

    updateWhatsappLink(cart, checkoutBtn);
    checkoutBtn.classList.remove('disabled');
  };
  
  const updateWhatsappLink = (cart, btn) => {
    let message = '¡Hola! Quisiera hacer el siguiente pedido:\n\n';
    cart.forEach(item => { message += `- *${item.name}* (x${item.quantity})\n`; });
    message += '\n¡Muchas gracias!';
    btn.href = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(message)}`;
  };

  const modifyItemQuantity = (productId, action) => {
    let cart = JSON.parse(localStorage.getItem('cart')) || [];
    const itemIndex = cart.findIndex(item => item.id === productId);
    if (itemIndex > -1) {
      if (action === 'increase') cart[itemIndex].quantity++;
      else if (action === 'decrease' && cart[itemIndex].quantity > 1) cart[itemIndex].quantity--;
      else cart.splice(itemIndex, 1);
    }
    localStorage.setItem('cart', JSON.stringify(cart));
    document.dispatchEvent(new CustomEvent('cartUpdated')); // Avisa a otros componentes (como el botón)
  };

  const removeItem = (productId) => {
    let cart = JSON.parse(localStorage.getItem('cart')) || [];
    cart = cart.filter(item => item.id !== productId);
    localStorage.setItem('cart', JSON.stringify(cart));
    document.dispatchEvent(new CustomEvent('cartUpdated')); // Avisa a otros componentes
  };

  // Escuchar por la señal para abrirse
  document.addEventListener('openCartPanel', () => cartPanel.classList.add('is-open'));
  // Cerrar el panel
  closeCartBtn.addEventListener('click', () => cartPanel.classList.remove('is-open'));
  // Escuchar por la señal para actualizar su contenido
  document.addEventListener('cartUpdated', updateCartContent);
  
  // Manejar clics dentro del panel (cambiar cantidad, eliminar)
  document.getElementById('cart-items-container').addEventListener('click', (e) => {
    const itemElement = e.target.closest('.cart-item');
    if (!itemElement) return;
    const productId = itemElement.dataset.id;
    if (e.target.matches('.quantity-btn')) modifyItemQuantity(productId, e.target.dataset.action);
    if (e.target.matches('.remove-item-btn')) removeItem(productId);
  });

  // Actualizar el contenido la primera vez que carga la página
  updateCartContent();
});
</script>

<style>
/* Estilos generales */
.cart-panel { position: fixed; top: 0; right: -100%; width: 100%; max-width: 400px; height: 100%; background-color: white; box-shadow: -10px 0 30px rgba(0,0,0,0.15); z-index: 1100; transition: right 0.35s ease-in-out; display: flex; flex-direction: column; }
.cart-panel.is-open { right: 0; }
.panel-header { display: flex; justify-content: space-between; align-items: center; padding: 1rem 1.5rem; border-bottom: 1px solid #e5e7eb; }
.panel-header h3 { margin: 0; font-size: 1.3rem; font-weight: 700; color: #333; }
.close-btn { background: none; border: none; font-size: 2rem; cursor: pointer; color: #888; transition: transform 0.2s; }
.close-btn:hover { transform: rotate(90deg); }
.cart-items-container { flex-grow: 1; overflow-y: auto; padding: 1.5rem; }
.empty-cart-message { text-align: center; color: #888; margin-top: 4rem; font-size: 1.1rem; }
.panel-footer { padding: 1.5rem; border-top: 1px solid #e5e7eb; background-color: #f9fafb; }
.whatsapp-btn { display: block; width: 100%; padding: 1rem; background-color: #25D366; color: white; text-align: center; text-decoration: none; font-weight: 700; border-radius: 12px; transition: background-color 0.2s; font-size: 1rem; }
.whatsapp-btn:hover { background-color: #128C7E; }
.whatsapp-btn.disabled { background-color: #ccc; pointer-events: none; cursor: not-allowed; }

/* Estilos con amor ❤️ */
.cart-item { display: grid; grid-template-columns: 1fr auto; grid-template-areas: "details remove" "quantity remove"; align-items: center; gap: 0.25rem 1rem; padding-bottom: 1.25rem; margin-bottom: 1.25rem; border-bottom: 1px solid #f0f0f0; }
.cart-item:last-child { border-bottom: none; margin-bottom: 0; }
.item-details { grid-area: details; }
.item-name { font-weight: 600; font-size: 1rem; color: #374151; line-height: 1.4; margin: 0; }
.item-quantity { grid-area: quantity; display: flex; align-items: center; gap: 0.75rem; margin-top: 0.5rem; }
.quantity-btn { width: 28px; height: 28px; border: 1px solid #e0e0e0; background-color: white; border-radius: 50%; cursor: pointer; font-weight: 600; font-size: 1.2rem; color: #555; display: flex; align-items: center; justify-content: center; transition: background-color 0.2s, color 0.2s, border-color 0.2s; }
.quantity-btn:hover { background-color: #ffeff4; color: #ff5a87; border-color: #ff5a87; }
.item-quantity span { font-weight: 700; font-size: 1rem; min-width: 20px; text-align: center; color: #333; }
.remove-item-btn { grid-area: remove; background: #f1f1f1; border: none; border-radius: 50%; width: 36px; height: 36px; font-size: 1.5rem; line-height: 1; color: #aaa; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: background-color 0.2s, color 0.2s, transform 0.2s; }
.remove-item-btn:hover { background-color: #ff5a87; color: white; transform: scale(1.1); }
</style>