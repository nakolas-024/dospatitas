---
const categories = [
  {
    name: 'Niños',
    href: '/catalogo/ninos',
    imgSrc: 'https://images.unsplash.com/photo-1503944583220-79d6e870d00a?auto=format&fit=crop&w=800&q=80',
    alt: 'Niño jugando con un avión de juguete'
  },
  {
    name: 'Niñas',
    href: '/catalogo/ninas',
    imgSrc: 'https://images.unsplash.com/photo-1524502397800-2d82be85418b?auto=format&fit=crop&w=800&q=80',
    alt: 'Niña sonriendo'
  },
  {
    name: 'Veterinarios',
    href: '/catalogo/veterinarios',
    imgSrc: 'https://images.unsplash.com/photo-1583337130417-2346040878f3?auto=format&fit=crop&w=800&q=80',
    alt: 'Carnet de control para mascotas'
  },
];
---

<section class="categories-section">
  <div class="container">
    <h2 class="categories-title">Diseños para cada integrante</h2>
    <div class="category-grid">
      {categories.map(category => (
        <a href={category.href} class="category-card" aria-label={category.alt}>
          <div class="card-background" style={`background-image: url(${category.imgSrc})`}></div>
          <div class="card-overlay"></div>
          <span class="card-title">{category.name}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
.categories-section {
  padding: 4rem 1rem;
  font-family: sans-serif;
}
.categories-title {
  text-align: center;
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 2.5rem;
  color: var(--color-primary-dark);
}
.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
}

.category-card {
  position: relative;
  display: block;
  border-radius: 16px;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.category-card:hover {
  transform: scale(1.05);
  box-shadow: 0 10px 25px rgba(0,0,0,0.2);
}

.card-background {
  width: 100%;
  height: 200px;
  background-size: cover;
  background-position: center;
  transition: transform 0.3s ease;
}
.category-card:hover .card-background {
  transform: scale(1.1);
}

.card-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.45), rgba(0,0,0,0));
  transition: background 0.3s ease;
}
.category-card:hover .card-overlay {
  background: linear-gradient(to top, rgba(0,0,0,0.55), rgba(0,0,0,0));
}

.card-title {
  position: absolute;
  bottom: 1rem;
  left: 1rem;
  color: #fff;
  font-weight: 700;
  font-size: 1.2rem;
  z-index: 2;
  text-shadow: 0 2px 8px rgba(0,0,0,0.5);
}
@media (max-width:768px){
  .categories-title{font-size:1.6rem;margin-bottom:1.5rem}
  .card-background{height:160px}
}
</style>
