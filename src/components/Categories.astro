---
// src/components/Categories.astro

// CORRECCIÓN DEFINITIVA: Se ajusta "Mascotas" a "Veterinarios"
const categories = [
  {
    name: 'Niños',
    href: '/catalogo/ninos',
    imgSrc: 'https://images.unsplash.com/photo-1503944583220-79d6e870d00a?auto=format&fit=crop&w=800&q=80',
    alt: 'Niño jugando con un avión de juguete'
  },
  {
    name: 'Niñas',
    href: '/catalogo/ninas',
    imgSrc: 'https://images.unsplash.com/photo-1524502397800-2d82be85418b?auto=format&fit=crop&w=800&q=80',
    alt: 'Niña sonriendo'
  },
  {
    name: 'Veterinarios',
    href: '/catalogo/veterinarios',
    imgSrc: 'https://images.unsplash.com/photo-1583337130417-2346040878f3?auto=format&fit=crop&w=800&q=80',
    alt: 'Carnet de control para mascotas'
  },
];
---

<section class="categories-section">
  <div class="container">
    <h2 class="categories-title">Diseños para cada integrante</h2>
    <div class="category-grid">
      {categories.map(category => (
        <a href={category.href} class="category-card">
          <div 
            class="card-background" 
            style={`background-image: url(${category.imgSrc})`}
            aria-label={category.alt}
          ></div>
          <div class="card-overlay"></div>
          <span class="card-title">{category.name}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
/* ... (código de estilos sin cambios) ... */
</style>