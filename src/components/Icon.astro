---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'svg'> {
  name: 'cart' | 'facebook' | 'whatsapp'; // Aquí defines los nombres de los iconos que tendrás
  size?: number;
}

const { name, size = 24, class: className, ...rest } = Astro.props;

// Un objeto que mapea nombres de iconos a su contenido SVG
const icons = {
  cart: `
    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
    <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
    <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
    <path d="M17 17h-11v-14h-2" />
    <path d="M6 5l14 1l-1 7h-13" />
  `,
  facebook: `
    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
    <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3" />
  `,
  whatsapp: `
    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
    <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
    <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
  `,
  // Puedes añadir más iconos aquí
};

const iconPath = icons[name];
---

{iconPath && (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class:list={["icon", `icon-${name}`, className]}
    width={size}
    height={size}
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    {...rest}
    set:html={iconPath}
  />
)}

<style>
  .icon {
    display: inline-block;
    vertical-align: middle;
  }
</style>