// src/components/Hero.astro
---
<section class="hero">
  <div class="hero-content container">

    <div class="text-box">
      <h1>El recuerdo más lindo de su crecimiento</h1>
      <p>Carnets de control sano personalizados para niños, niñas y mascotas. (Somos ex colorfull.cl)</p>
      <a href="/catalogo" class="hero-button">
        Ver Diseños
      </a>
    </div>

  </div>
</section>

<style>
.hero {
  /* === CORRECCIÓN APLICADA AQUÍ === */
  /* He combinado todas las propiedades 'background' en una sola línea. */
  /* Esto es más limpio y evita el error de sintaxis que te apareció. */
  background: #FDECF2 url('/images/hero-banner.png') no-repeat center / cover;

  min-height: 450px; 
  display: flex;
  align-items: center;
  padding: 2rem 0;
}

.hero-content {
  display: flex;
  justify-content: flex-start;
}

.text-box {
  background-color: white;
  padding: 2.5rem;
  border-radius: 24px;
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
  width: 100%;
  max-width: 480px;
}

h1 { 
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0 0 0.75rem 0;
  line-height: 1.2; 
  color: #333; 
}

p { 
  font-size: 1.1rem; 
  margin: 0 0 2rem 0; 
  color: #666;
}

.hero-button {
  display: inline-block;
  background: #ffafcc;
  color: #333;
  border: none;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: bold;
  cursor: pointer;
  border-radius: 50px;
  box-shadow: 0 8px 15px rgba(255, 175, 204, 0.5);
  transition: all 0.3s ease;
  text-decoration: none;
}
.hero-button:hover { 
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 12px 20px rgba(255, 175, 204, 0.6);
}

@media (max-width: 768px) {
  .hero {
    min-height: 350px;
  }
  .hero-content {
    justify-content: center;
    padding: 0 1.5rem;
  }
  .text-box {
    text-align: center;
    padding: 2rem;
  }
  h1 {
    font-size: 2rem;
  }
}
</style>