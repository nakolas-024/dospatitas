<style>
.hero {
  position: relative;
  background: linear-gradient(rgba(255, 255, 255, 0.5), rgba(253, 236, 242, 0.5)), url('/images/hero-banner.png') no-repeat center / cover;
  min-height: 450px; 
  display: flex;
  align-items: center;
  padding: 2rem 0;
  overflow: hidden;
}

.hero-content {
  display: flex;
  justify-content: flex-start;
  animation: fadeSlideIn 1s ease forwards;
  opacity: 0;
}

@keyframes fadeSlideIn {
  0% { opacity: 0; transform: translateY(20px); }
  100% { opacity: 1; transform: translateY(0); }
}

.text-box {
  background-color: white;
  padding: 2.5rem;
  border-radius: 24px;
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
  width: 100%;
  max-width: 480px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.text-box:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 50px rgba(0,0,0,0.15);
}

h1 { 
  font-size: clamp(2rem, 4vw, 2.5rem);
  font-weight: 700;
  margin: 0 0 0.75rem 0;
  line-height: 1.2; 
  color: #333; 
}

p { 
  font-size: clamp(1rem, 2.5vw, 1.1rem); 
  margin: 0 0 2rem 0; 
  color: #666;
}

.hero-button {
  display: inline-block;
  background: linear-gradient(135deg, #ffafcc, #ff7eb6);
  color: #333;
  border: none;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: bold;
  cursor: pointer;
  border-radius: 50px;
  box-shadow: 0 8px 15px rgba(255, 175, 204, 0.5);
  transition: all 0.3s ease;
  text-decoration: none;
}
.hero-button:hover { 
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 12px 25px rgba(255, 175, 204, 0.6);
}

@media (max-width: 768px) {
  .hero {
    min-height: 350px;
  }
  .hero-content {
    justify-content: center;
    padding: 0 1.5rem;
  }
  .text-box {
    text-align: center;
    padding: 2rem;
  }
  h1 {
    font-size: clamp(1.5rem, 5vw, 2rem);
  }
  p { font-size: clamp(0.9rem, 3vw, 1rem); }
}
</style>
